<p id="notice"><%= notice %></p>

<h1>Listing Things</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Public</th>
      <th>Stars count</th>
      <th>Name</th>
      <th>Code</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.user_id %></td>
        <td><%= thing.public %></td>
        <td><%= thing.stars_count %></td>
        <td><%= thing.name %></td>
        <td><%= thing.code %></td>
        <td><%= thing.type %></td>
        <td><%= link_to 'Show', thing %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

