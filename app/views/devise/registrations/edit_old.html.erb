
<div class="mdl-grid">
<h2 class="mdl-cell mdl-cell--10-col">Edit your account </h2>
<div class="mdl-cell mdl-cell--2-col">
<a href="https://gravatar.com" target="_blank" style="float:right">
<%= gravatar_tag resource.email %>
<% if resource.image %>
  <img src="<%= resource.image %>&amp;s=100"/>
<% end %>
</a>
 </div>
 </div>
<div class="mdl-cell mdl-cell--12-col mdl-grid">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :name, autofocus: true, class: "mdl-textfield__input" %>
    <%= f.label :name, class: "mdl-textfield__label" %>
  </div>

  <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.email_field :email, class: "mdl-textfield__input"  %>
    <%= f.label :email, class: "mdl-textfield__label"  %>
  </div>

  <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :website, class: "mdl-textfield__input"  %>
    <%= f.label :website, class: "mdl-textfield__label"  %>
  </div>
  <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :organization, class: "mdl-textfield__input"  %>
    <%= f.label :organization, class: "mdl-textfield__label"  %>
  </div>

  <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :place, class: "mdl-textfield__input"  %>
    <%= f.label :place, class: "mdl-textfield__label"  %>
  </div>

  <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input"  %>
    <%= f.label :password, class: "mdl-textfield__label", value: "New password (leave blank if you don't want to change it)"  %>
  </div>

  <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "mdl-textfield__input"  %>
    <%= f.label :password_confirmation, class: "mdl-textfield__label", value: "Confirm your new password (leave blank if you don't want to change it)"  %>
  </div>
  </div>
<div class="mdl-grid">
  <p class="mdl-cell mdl-cell--12-col"><em>We need your current password to confirm your changes</em></p>
  <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.password_field :current_password, autocomplete: "off", class: "mdl-textfield__input", required: true  %>
    <%= f.label :current_password, class: "mdl-textfield__label" %>
  </div>
  <div style="margin:auto">
    <%= f.submit "Update", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"%>
  </div>
 </div>
<% end %>

  <div>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect " %></p>

  </div>
<!--<%= link_to "Back", :back %>-->

</div>

<%= render 'edit_new' %>
</section>
