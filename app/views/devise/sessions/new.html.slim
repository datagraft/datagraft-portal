- title "Log in"
- setOption :mdlCard

div.mdl-card
  /! MDL Card container
  div.mdl-card__title.mdl-color-text--grey-50
    h2 Log in
  .sin-condensed-form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      div.mdl-card__supporting-text.sin-padding
        .mdl-grid
          .mdl-cell.mdl-cell--5-col.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
            = f.label :email, class: "mdl-textfield__label"
            = f.email_field :email, autofocus: true, class: "mdl-textfield__input"
        .mdl-grid
          .mdl-cell.mdl-cell--5-col.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
            = f.label :password, class: "mdl-textfield__label"
            = f.password_field :password, autocomplete: "off", class: "mdl-textfield__input"
        - if devise_mapping.rememberable?
          .field
            label.mdl-checkbox.mdl-js-checkbox.mdl-js-ripple-effect.sin-margin-checkbox[for="remember_me"]
              = f.check_box :remember_me, class: "mdl-checkbox__input", id:"remember_me"
              span.mdl-checkbox__label
                | Remember me
        = f.submit "Log in", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"
      div.mdl-card__actions
        = render "devise/shared/links"
