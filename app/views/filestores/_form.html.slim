= simple_form_for @thing, url: thing_path(@thing) do |f|
  .mdl-grid
    h4.mdl-cell--12-col Properties
    = f.input :name, wrapper: :default
    = f.input :description, as: :text, input_html: { rows: 5 }
    = f.input :keywords, as: :text, input_html: { rows: 5 }
    #keyword-frame
      - kwds = @thing.keywords
      - unless kwds.blank?
        ul.keyw-array-container
          - kwds.each do |kwd|
            li.keyw-array-item 
              button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect type="button" onclick="keywordDeleteFunction(this)" 
                = kwd
                i.material-icons delete onclick="keywordDeleteFunction(this)" 
  .mdl-grid
    = f.input :separator, collection: get_separator_list, wrapper: :select
  .mdl-grid
    = f.input :license, collection: get_common_licenses, wrapper: :select
  .mdl-grid
    = f.input :public, wrapper: :switch
  .mdl-grid
    = f.input :file, as: :file, wrapper: :select
  hr.sin-invisible-form-separator
  .mdl-grid
    = f.button :submit
#keyword-debug debug

