<%= form_for(@thing, url: thing_path(@thing)) do |f| %>
<% if @thing.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@thing.errors.count, "error") %>prohibited this transformation from being saved:</h2>

  <ul>
    <% @thing.errors.full_messages.each do |message| %>
    <li>
      <%= message %></li>
    <% end %></ul>
</div>
<% end %>

<div class="mdl-shadow--2dp sin-form-group sin-padding">
  <div class="sin-condensed-form">
    <div class="mdl-grid">
      <div class="mdl-cell mdl-cell--5-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :name, class: "mdl-textfield__label" %>
        <%= f.text_field :name, class: "mdl-textfield__input" %></div>
    </div>
    <div class="field">
      <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="checkbox-public">
        <%= f.check_box :public, id: "checkbox-public", class: "mdl-switch__input" %>
        <span class="mdl-switch__label">Public</span>
      </label>
    </div>
  </div>
</div>

<h3>Metadata</h3>
<div class="mdl-grid">
  <div class="actions mdl-cell mdl-cell--4-col">
    <%= f.submit class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"%></div>
</div>
<% end %>