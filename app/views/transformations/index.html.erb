<p id="notice"><%= notice %></p>

<h1>Listing Transformations</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transformations.each do |transformation| %>
      <tr>
        <td><%= transformation.slug %></td>
        <td><%= link_to 'Show', thing_path(transformation) %></td>
        <td><%= link_to 'Edit', thing_edit_path(transformation) %></td>
        <td><%= link_to 'Destroy', thing_path(transformation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transformation', new_transformation_path %>
