  #ovl1.overlay
    /! Button to close the overlay navigation
    button.closebtn#close-ovl1 href="javascript:void(0)" X
    = image_tag(image_url("screenshots/Grafterizer1.png"))

  #ovl2.overlay
    /! Button to close the overlay navigation
    button.closebtn#close-ovl2 href="javascript:void(0)" X
    = image_tag(image_url("screenshots/Dashboard.png"))

  #ovl3.overlay
    /! Button to close the overlay navigation
    button.closebtn#close-ovl3 href="javascript:void(0)" X
    .overlay-content
      = image_tag(image_url("screenshots/Sparql3.png"))
