    div.mdl-card__actions
      == link_to 'Create', new_queriable_data_store_path(:hosting => 'spaziodati'),
           :class => "mdl-button mdl-button--icolored mdl-js-button mdl-js-ripple-effect"

  div.mdl-card.mdl-shadow--2dp.mdl-cell--4-col.mdl-cell.sin-datastore-card.sin-card-disabled
